rules:
  # 忽略构建输出目录
  - "build/"
  - "dist/"
  - "out/"
  
  # 忽略依赖目录
  - "node_modules/"
  - "vendor/"
  - ".venv/"
  - "env/"
  
  # 忽略IDE和编辑器配置文件
  - ".idea/"
  - ".vscode/"
  - "*.sublime-*"
  
  # 忽略系统文件
  - ".DS_Store"
  - "Thumbs.db"
  
  # 忽略日志文件
  - "*.log"
  - "logs/"
  
  # 忽略临时文件
  - "tmp/"
  - "temp/"
  - "*.tmp"
  
  # 忽略环境配置文件
  - ".env"
  - ".env.local"
  
  # 忽略编译缓存
  - "__pycache__/"
  - "*.pyc"
  - "*.pyo"
  
  # 忽略测试覆盖率报告
  - "coverage/"
  - ".coverage"

  # 忽略git数据库
  - ".git/"